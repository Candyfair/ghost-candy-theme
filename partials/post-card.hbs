<article class="post-card{{#has index="0"}}-featured{{/has}}">

  {{!-- Si image --}}
  {{#if feature_image}}
  <div class="post-card__image-wrapper{{#has index="0"}} post-card__image-wrapper-featured{{/has}}{{^has index="0"}} post-card__image-wrapper-other{{/has}}">
    <a href="{{url}}">
      <img class="post-card__image"
        srcset="{{img_url feature_image size="s"}} 300w,
          {{img_url feature_image size="m"}} 600w,
          {{img_url feature_image size="l"}} 1000w,
          {{img_url feature_image size="xl"}} 2000w"
        sizes="(max-width: 1000px) 400px, 800px"
        src="{{img_url feature_image size="m"}}"
        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
        loading="lazy"
      />
    </a>
  </div>
  {{/if}}
  
  {{!-- Tag, titre, (extrait) et meta --}}
  <div class="post-card__content-wrapper{{#has index="0"}} post-card__content-wrapper-featured{{/has}}{{^has index="0"}} post-card__content-wrapper-other{{/has}}">
    <p>Tag</p>
    <p>Titre</p>
    <p>Extrait</p>
    <p>Meta</p>
    <hr>
  </div>


</article>