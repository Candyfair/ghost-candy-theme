{{!-- LOGO --}}
<div class="header__logo">
  <a href="{{@site.url}}">
    {{#if @site.logo}}
      <img src="{{@site.logo}}" alt="{{@site.title}}">
    {{else}}
      {{@site.title}}
    {{/if}}
  </a>

  <div class="header__bubble-wrapper header-desktop">
    <img
      src="{{asset "img/bulle_blog.png"}}"
      alt="Journal of my creative projects"
      class="header__bubble"
      onClick="javascript:window.open('/about', '_self')"
    >
  </div>
</div>

{{!-- Speech bubble --}}
<div class="header__bubble-wrapper header-tablet">
  <img
    src="{{asset "img/bulle_blog.png"}}"
    alt="Journal of my creative projects"
    class="header__bubble"
    onClick="javascript:window.open('/about', '_self')"
  >
</div>

{{!-- NAVIGATION --}}
<div class="header__nav">
  {{navigation}}
</div>
